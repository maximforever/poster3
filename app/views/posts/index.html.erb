<div class = "main">
	<div class = "container">
		<div class = "post-form">
			<%= form_for (@new_post) do |f| %>

				<div class = "author">
					<%= f.text_field :author, placeholder: "Author:" %>
				</div>
				<div class ="content">
					<%= f.text_area :content, placeholder: "Message:"%>
				</div>
				<div class = "submit-btn">
					<%= f.submit "Submit", :class => "btn btn-lg" %>
				</div>
				
			<% end %>
		</div>		
	</div>
</div>

<div class = "supporting">
	<div class = "container">

	<% @all_posts.each do |p| %>
		<div class ="one-post">
			<div class = "post-author">
				<%= p.id %>. Posted by <em><%= p.author %></em> on <%= p.created_at %>
			</div>
			<div class = "post-content">
				<%= p.content %>
			</div>
		</div>	
	<% end %>

	</div>
</div>
